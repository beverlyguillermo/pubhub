{% import "macros/global.twig" as globalMacros %}

{% set facebookAppId = "311378138917053" %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

        {% block meta %}

        {% endblock %}

        <title>{% block title %}{{ results.headline|striptags }}{% endblock %} | Hub</title>

        {% if object == "articles" %}
            {% include "partials/social-meta-article.twig" %}
        {% elseif object == "events" %}
            {% include "partials/social-meta-event.twig" %}
        {% elseif object == "images" %}
            {% include "partials/social-meta-image.twig" %}
        {% endif %}
        
        {# FAVICON FTW #}
        <link rel="shortcut icon" href="/assets/img/icons/favicon.gif" type="image/png" />
        <!-- For third-generation iPad with high-resolution Retina display: -->
        <link rel="apple-touch-icon" sizes="144x144" href="/assets/img/icons/apple-touch-icon-144x144.png">
        <!-- For iPhone with high-resolution Retina display: -->
        <link rel="apple-touch-icon" sizes="114x114" href="/assets/img/icons/apple-touch-icon-114x114.png">
        <!-- For first- and second-generation iPad: -->
        <link rel="apple-touch-icon" sizes="72x72" href="/assets/img/icons/apple-touch-icon-72x72.png">
        <!-- For non-Retina iPhone, iPod Touch, and Android 2.1+ devices: -->
        <link rel="apple-touch-icon" href="/assets/img/icons/apple-touch-icon-57x57.png">

        <link rel="apple-touch-icon-precomposed" href="/assets/img/icons/apple-touch-icon-57x57-precomposed.png">

        

        {% block stylesheet %}
        {% endblock %} 

        

        <!--[if IE]>
        <link rel="stylesheet" type="text/css" rel="stylesheet" href="/assets/css/ie-77db204f32ecc7d3eb79d955482d3f5cd72f012a.css" />
        {% include "partials/scripts/hub-ie.twig" %}
        <![endif]-->

