{% extends "layouts/manager.twig" %}

{% block content %}

	<div class="page-header">
		<h1>Pages</h1>
	</div>

	{% include "partials/messages.twig" %}

<div class="row">

	<div class="row">

	{% include "pages/nav.twig" with {"subactive": "index"} %}

		<div class="span9 tab-content">
			
			<div class="tab-pane fade active in" id="pagesTopics">
				{{ manager.page_list_table(page_groups.topics) }}
			</div>

			<div class="tab-pane fade" id="pagesHub">
				{{ manager.page_list_table(page_groups.hub) }}
			</div>

			<div class="tab-pane fade" id="pagesMagazine">
				{{ manager.page_list_table(page_groups.magazine) }}
			</div>

			<div class="tab-pane fade" id="pagesGazette">
				{{ manager.page_list_table(page_groups.gazette) }}
			</div>

		</div>

	</div>

{% endblock content %}
