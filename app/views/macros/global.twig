	{% endfor %}
	{% if topicList is not empty %}
		<span class="topics-in">Posted in {{ topicList|join(", ") }}</span>
	{% endif %}
{% endmacro %}


{% macro getTags(article) %}	
	{% set tagList = [] %}
	{% for tag in article._embedded.tags %}
		{% set tagLink %}
