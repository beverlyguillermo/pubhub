				{% if article.excerpt is not empty %}
					<div class="summary">{{ article.excerpt }} {{ _self.getSourceLine(article) }}</div>
				{% endif %}

				<div class="force">
					<div>{{ _self.getPublishDate(article) }}</div>
					{{ _self.multimediaPromo(article) }}
				</div>

			</li>

		{% endfor %}

	</ul>

{% endmacro %}
