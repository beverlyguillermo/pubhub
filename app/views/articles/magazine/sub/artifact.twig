{% extends "articles/magazine/single.twig" %}

{% block magazine_article %}
	
	{{ magazineMacros.getTitle(results) }}
	{{ globalMacros.getSubheadline(results) }}
	{{ globalMacros.getAuthorDateTopicLine(results) }}
	{{ globalMacros.getEmphasis(results) }}

	<div class="body-content">

		{% block magazine_inset %}
			{{ parent() }}
		{% endblock %}

		{% block magazine_body %}
			{{ parent() }}
		{% endblock %}

	</div>

	{{ globalMacros.getAside(results) }}
	
{% endblock %}

{% block footer %}
	{{ parent() }}
	{# Epic zoom javascript #}

	{% if results.publication_content.impact_use_ratio == 1 and results.publication_content.impact_zoom == 1 %}
		<script src="/assets/js/vendor/epic-image-zoom-touch-capable.min.js"></script>
		<script>
		jQuery(document).ready(function() {
			jQuery('.epic-zoom img').epicZoom({ largeImage: '{{ results._embedded.image_impact.0.sizes.landscape|replace({ "styles/landscape/public/": ""}) }}', magnification: 1, newPosition: true, size: 400 });
		});
		</script>
	{% endif %}
{% endblock %}